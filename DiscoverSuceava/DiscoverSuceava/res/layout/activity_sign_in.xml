<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AntiqueWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.example.discoversuceava.SignInActivity" >

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/sign_in"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email2"
        android:layout_below="@+id/emailEdit2"
        android:layout_marginTop="22dp"
        android:text="@string/password"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/passwordEdit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password2"
        android:layout_below="@+id/password2"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="33dp"
        android:layout_marginRight="30dp"
        android:text="@string/sign_in_button"
        style="@style/btnStyleBlue"
        android:minHeight="40dp"
        android:minWidth="70dp"
        android:onClick="signIn" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emailEdit2"
        android:layout_marginBottom="43dp"
        android:layout_toLeftOf="@+id/welcome"
        android:text="@string/email"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailEdit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/welcome"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

</RelativeLayout>
